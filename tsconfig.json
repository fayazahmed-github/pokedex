{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "moduleResolution": "node",
  "paths": {
    "@monorepo/components": ["packages/components/src"],
    "@monorepo/utils": ["packages/utils/src"],
  }
  },
  "exclude": ["node_modules"]
}